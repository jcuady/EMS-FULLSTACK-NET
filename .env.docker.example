# Docker Environment Configuration
# Copy this file to .env and update with your actual values

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long-12345-change-this-in-production
JWT_ISSUER=EmployeeMvp
JWT_AUDIENCE=EmployeeMvp
JWT_EXPIRATION_MINUTES=1440

# Supabase Configuration (if using Supabase instead of local PostgreSQL)
SUPABASE_URL=your-supabase-project-url
SUPABASE_KEY=your-supabase-anon-key

# Database Configuration (used by docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=employee_management

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# API Configuration
API_PORT=5000
API_HTTPS_PORT=5001

# Frontend Configuration
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:5000/api
